@page
@model On_Demand_Tutor_UI.Pages.Moderator.IncompleteTutor.IncompleteIndex

@{
    ViewData["Title"] = "Incomplete Tutors";
    Layout = "_Layout_Tutor";
}

<div class="container mt-4">
    <h1 class="mb-4">Incomplete Tutors</h1>

    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Tutor List</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.IncompleteTutors[0].FullName)</th>
                            <th>@Html.DisplayNameFor(model => model.IncompleteTutors[0].Email)</th>
                            <th>@Html.DisplayNameFor(model => model.IncompleteTutors[0].Status)</th>
                            <th>@Html.DisplayNameFor(model => model.IncompleteTutors[0].Major)</th>
                            <th>@Html.DisplayNameFor(model => model.IncompleteTutors[0].Grade)</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.IncompleteTutors)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.FullName)</td>
                                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                                <td>
                                    <span class="badge bg-warning text-dark">
                                        @Html.DisplayFor(modelItem => item.Status)
                                    </span>
                                </td>
                                <td>@Html.DisplayFor(modelItem => item.Major)</td>
                                <td>@Html.DisplayFor(modelItem => item.Grade)</td>
                                <td>
                                    <a asp-page="./IncompleteDetails" asp-route-id="@item.TutorId" class="btn btn-sm btn-info">Details</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<div class="text-center mt-3">
    <a asp-page="/Moderator/Index" class="btn btn-secondary">Back to Index</a>
</div>