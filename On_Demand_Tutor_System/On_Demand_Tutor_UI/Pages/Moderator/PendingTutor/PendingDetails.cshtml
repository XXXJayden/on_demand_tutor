@page
@model PendingDetails

@{
    ViewData["Title"] = "Tutor Details";
}

<div class="container mt-4">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <h1 class="mb-4">Tutor Details</h1>

    <div class="card">
        <div class="card-header">
            <h4>@Model.Tutor.Fullname</h4>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Email</dt>
                        <dd class="col-sm-8">@Model.Tutor.Email</dd>

                        <dt class="col-sm-4">Status</dt>
                        <dd class="col-sm-8">@Model.Tutor.Status</dd>

                        <dt class="col-sm-4">Major</dt>
                        <dd class="col-sm-8">@Model.Tutor.Major</dd>

                        <dt class="col-sm-4">Grade</dt>
                        <dd class="col-sm-8">@Model.Tutor.Grade</dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    <h5>Description</h5>
                    <p>@Model.Tutor.Description</p>
                </div>
            </div>

            <h5>Avatar</h5>
            <div class="row">
                <div class="col-md-4">
                    <img src="@Model.Tutor.Avatar" alt="Avatar" class="img-fluid mb-3" />
                </div>
            </div>

            <h5>Achievements</h5>
<div class="row">
    @{
        int count = 0;
    }
    @foreach (var achievement in Model.Tutor.Achievements)
    {
        if (count % 3 == 0 && count != 0)
        {
            @:</div><div class="row">
        }
        <div class="col-md-4 mb-3">
            <img src="@achievement.Certificate" alt="Achievement" class="img-fluid" />
        </div>
        count++;
    }
</div>
        <div class="card-footer">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <a asp-page="./PendingIndex" class="btn btn-secondary">Back to Menu</a>
                </div>
                <div>
                    <form method="post" asp-page-handler="Approve" class="d-inline">
                        <input type="hidden" name="id" value="@Model.Tutor.TutorId" />
                        <button type="submit" class="btn btn-success">Approve</button>
                    </form>
                    <form method="post" asp-page-handler="Deny" class="d-inline">
                        <input type="hidden" name="id" value="@Model.Tutor.TutorId" />
                        <button type="submit" class="btn btn-danger">Deny</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>