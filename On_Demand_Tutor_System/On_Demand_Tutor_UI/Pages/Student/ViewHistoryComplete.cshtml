@page
@model On_Demand_Tutor_UI.Pages.Student.ViewHistoryComplete

@{
    ViewData["Title"] = "View Completed Learning";
}

<h1 class="text-center my-4" style="color: #2c3e50; font-family: Arial, sans-serif;">View Student Bookings History</h1>

<div class="container">
    <div class="table-responsive">
        <table class="table table-hover table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Start Date</th>
                    <th>End Date</th>
                    <th>Service</th>
                    <th>Tutor</th>
                    <th>Email</th>
                    <th>Payment Method</th>
                    <th>Schedule</th>
                    <th>Price</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.LearningComplete)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.DateStart)</td>
                        <td>@Html.DisplayFor(modelItem => item.DateEnd)</td>
                        <td>@Html.DisplayFor(modelItem => item.ServiceName)</td>
                        <td>@Html.DisplayFor(modelItem => item.TutorName)</td>
                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                        <td>@Html.DisplayFor(modelItem => item.PaymentMethods)</td>
                        <td>
                            <ul class="list-unstyled">
                                @foreach (var slot in item.Schedules)
                                {
                                    <li>@slot</li>
                                }
                            </ul>
                        </td>
                        <td>@item.Price.ToString("C", new System.Globalization.CultureInfo("vi-VN"))</td>
                        <td style="@(item.PaymentStatus == "Paid" ? "background-color: #28a745; color: white;" :
                                 item.PaymentStatus == "UnPaid" ? "background-color: #ffc107; color: black;" : "")">
                            @item.PaymentStatus
                        </td>
                        <td class="text-center">
                            <div class="action-buttons">
                                @if (item.PaymentStatus == "Paid" || item.PaymentMethods == "Offline")
                                {
                                    <button class="action-btn purchase disabled" disabled>
                                        <i class="fas fa-shopping-cart"></i>
                                        <span>Purchased</span>
                                    </button>
                                }
                                else
                                {
                                    <form method="post" asp-page-handler="Purchase" asp-route-BookingId="@item.Id">
                                        <button type="submit" class="action-btn purchase">
                                            <i class="fas fa-shopping-cart"></i>
                                            <span>Purchase</span>
                                        </button>
                                    </form>
                                }
                                <button type="button" class="action-btn feedback"
                                        onclick="openFeedbackModal(@item.Id, @item.StudentId, @item.TutorId, '@item.Feedbacks.FirstOrDefault()?.Detail', '@item.Feedbacks.FirstOrDefault()?.Rating')">
                                    <i class="fas fa-comment-dots"></i>
                                    <span>Feedback</span>
                                </button>

                                <a asp-page="/Student/Report" asp-route-StudentId="@item.StudentId" asp-route-ServiceId="@item.ServiceId" asp-route-TutorId="@item.TutorId" asp-route-BookingId="@item.Id" class="action-btn report">
                                    <i class="fas fa-flag"></i>
                                    <span>Report</span>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Feedback Modal -->
<div class="modal fade" id="feedbackModal" tabindex="-1" role="dialog" aria-labelledby="feedbackModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="feedbackModalLabel">Provide Feedback</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="feedbackForm" method="post">
                    <input type="hidden" id="bookingId" name="BookingId" />
                    <input type="hidden" id="studentId" name="StudentId" />
                    <input type="hidden" id="tutorId" name="TutorId" />

                    <div class="form-group">
                        <label for="rating">Rating:</label>
                        <div class="star-rating">
                            <span class="star" data-rating="1">&#9733;</span>
                            <span class="star" data-rating="2">&#9733;</span>
                            <span class="star" data-rating="3">&#9733;</span>
                            <span class="star" data-rating="4">&#9733;</span>
                            <span class="star" data-rating="5">&#9733;</span>
                        </div>
                        <input type="hidden" id="ratingValue" name="Rating" value="0" />
                    </div>

                    <div class="form-group">
                        <label for="feedbackDetail">Feedback:</label>
                        <textarea class="form-control" id="feedbackDetail" name="Detail" rows="3" required></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" onclick="submitFeedback()">Submit Feedback</button>
            </div>
        </div>
    </div>
</div>

<style>
    .star-rating {
        font-size: 24px;
        cursor: pointer;
    }

    .star {
        color: #ddd;
    }

        .star.active {
            color: gold;
        }

    .action-buttons {
        display: flex;
        flex-direction: column;
        gap: 8px;
    }

    .action-btn {
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 8px 12px;
        border: none;
        border-radius: 20px;
        font-size: 14px;
        font-weight: 500;
        color: #fff;
        transition: all 0.3s ease;
        cursor: pointer;
        text-decoration: none;
    }

        .action-btn i {
            margin-right: 8px;
        }

        .action-btn.purchase {
            background-color: #28a745;
        }

            .action-btn.purchase:hover {
                background-color: #218838;
            }

            .action-btn.purchase.disabled {
                background-color: #6c757d;
                cursor: not-allowed;
            }

        .action-btn.feedback {
            background-color: #17a2b8;
        }

            .action-btn.feedback:hover {
                background-color: #138496;
            }

        .action-btn.report {
            background-color: #ffc107;
            color: #343a40;
        }

            .action-btn.report:hover {
                background-color: #e0a800;
            }
</style>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

<script>
    function openFeedbackModal(bookingId, studentId, tutorId, feedbackDetail = '', feedbackRating = '0') {
        document.getElementById('bookingId').value = bookingId;
        document.getElementById('studentId').value = studentId;
        document.getElementById('tutorId').value = tutorId;
        document.getElementById('feedbackDetail').value = feedbackDetail || '';
        document.getElementById('ratingValue').value = feedbackRating || '0';
        updateStars(feedbackRating);
        $('#feedbackModal').modal('show');
    }
    function updateStars(rating) {
        const stars = document.querySelectorAll('.star');
        stars.forEach((star, index) => {
            if (index < rating) {
                star.classList.add('active');
            } else {
                star.classList.remove('active');
            }
        });
    }


    document.addEventListener('DOMContentLoaded', function () {
        const stars = document.querySelectorAll('.star');
        const ratingInput = document.getElementById('ratingValue');

        stars.forEach(star => {
            star.addEventListener('click', () => {
                const rating = star.getAttribute('data-rating');
                ratingInput.value = rating;
                updateStars(rating);
            });

            star.addEventListener('mouseover', () => {
                const rating = star.getAttribute('data-rating');
                updateStars(rating);
            });
        });

        document.querySelector('.star-rating').addEventListener('mouseout', () => {
            updateStars(ratingInput.value);
        });

        function updateStars(rating) {
            stars.forEach(star => {
                const starRating = star.getAttribute('data-rating');
                if (starRating <= rating) {
                    star.classList.add('active');
                } else {
                    star.classList.remove('active');
                }
            });
        }
    });

    function submitFeedback() {
        if (validateFeedbackForm()) {
            document.getElementById('feedbackForm').submit();
        }
    }

    function validateFeedbackForm() {
        const rating = document.getElementById('ratingValue').value;
        const detail = document.getElementById('feedbackDetail').value;

        if (rating === '0') {
            alert('Please select a rating');
            return false;
        }

        if (detail.trim() === '') {
            alert('Please write feedback details');
            return false;
        }

        return true;
    }
</script>
