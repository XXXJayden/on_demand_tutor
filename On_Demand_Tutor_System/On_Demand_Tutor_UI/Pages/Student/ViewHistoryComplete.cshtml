@page
@model On_Demand_Tutor_UI.Pages.Student.ViewProcessingLearningModel

@{
    ViewData["Title"] = "View Processing Learning";
}

<h1 class="text-center my-4" style="color: #2c3e50; font-family: Arial, sans-serif;">View Student Bookings</h1>

<div class="container">
    <div class="table-responsive">
        <table class="table table-bordered table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.ProcessingLearning[0].DateStart)</th>
                    <th>@Html.DisplayNameFor(model => model.ProcessingLearning[0].DateEnd)</th>
                    <th>@Html.DisplayNameFor(model => model.ProcessingLearning[0].ServiceName)</th>
                    <th>@Html.DisplayNameFor(model => model.ProcessingLearning[0].TutorName)</th>
                    <th>@Html.DisplayNameFor(model => model.ProcessingLearning[0].Email)</th>
                    <th>@Html.DisplayNameFor(model => model.ProcessingLearning[0].PaymentMethods)</th>
                    <th>@Html.DisplayNameFor(model => model.ProcessingLearning[0].Schedules)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.ProcessingLearning)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.DateStart)</td>
                        <td>@Html.DisplayFor(modelItem => item.DateEnd)</td>
                        <td>@Html.DisplayFor(modelItem => item.ServiceName)</td>
                        <td>@Html.DisplayFor(modelItem => item.TutorName)</td>
                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                        <td>@Html.DisplayFor(modelItem => item.PaymentMethods)</td>
                        <td>
                            <ul class="list-unstyled">
                                @foreach (var slot in item.Schedules)
                                {
                                    <li>@slot</li>
                                }
                            </ul>
                        </td>
                        <td class="text-center">
                            <a asp-page="/Student/Report" asp-route-StudentId="@item.StudentId" asp-route-TutorId="@item.TutorId" asp-route-BookingId="@item.Id" class="btn btn-primary btn-sm">Report</a>
                            <a asp-page="/Student/FeedBack" asp-route-StudentId="@item.StudentId" asp-route-TutorId="@item.TutorId" asp-route-BookingId="@item.Id" class="btn btn-primary btn-sm">FeedBack</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
