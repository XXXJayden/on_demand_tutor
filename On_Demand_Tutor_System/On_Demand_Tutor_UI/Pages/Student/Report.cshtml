@page
@model On_Demand_Tutor_UI.Pages.Student.ReportModel
@{
}

<h2 class="mb-4">Submit Report</h2>

<form method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label for="detail" class="form-label">Detail:</label>
        <textarea id="detail" name="Report.Detail" class="form-control" required></textarea>
    </div>
    <div class="mb-3">
        <label for="imageFile" class="form-label">Image:</label>
        <input type="file" id="imageFile" name="ImageFile" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

@if (!string.IsNullOrEmpty(Model.Message))
{
    <div class="alert alert-info mt-3">@Model.Message</div>
}
