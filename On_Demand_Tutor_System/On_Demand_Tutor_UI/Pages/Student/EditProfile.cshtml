@page
@model On_Demand_Tutor_UI.Pages.Student.EditProfileModel

@{
    ViewData["Title"] = "Edit Profile";
}

<h1>Edit Profile</h1>

@if (TempData["SuccessMessage"] != null)
{
    <script>
        window.onload = function () {
            alert("@TempData["SuccessMessage"]");
            window.location.href = '/Index';
        };
    </script>
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4>Edit Student Profile</h4>
        </div>
        <div class="card-body">
            <form method="post">
                <div class="form-group mb-3">
                    <label asp-for="Student.FullName" class="form-label"></label>
                    <input asp-for="Student.FullName" class="form-control" />
                    <span asp-validation-for="Student.FullName" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Student.Password" class="form-label"></label>
                    <input asp-for="Student.Password" type="password" class="form-control" />
                    <span asp-validation-for="Student.Password" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Student.Phone" class="form-label"></label>
                    <input asp-for="Student.Phone" class="form-control" />
                    <span asp-validation-for="Student.Phone" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Student.Email" class="form-label"></label>
                    <input asp-for="Student.Email" type="email" class="form-control" />
                    <span asp-validation-for="Student.Email" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Student.Address" class="form-label"></label>
                    <input asp-for="Student.Address" class="form-control" />
                    <span asp-validation-for="Student.Address" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Student.Grade" class="form-label"></label>
                    <input asp-for="Student.Grade" class="form-control" />
                    <span asp-validation-for="Student.Grade" class="text-danger"></span>
                </div>
                <div class="d-grid gap-2">
                    <input type="submit" value="Save" class="btn btn-success btn-lg" />
                </div>
            </form>
        </div>
        <div class="card-footer text-end">
            <a asp-page="/Index" class="btn btn-secondary">Back to Index</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
