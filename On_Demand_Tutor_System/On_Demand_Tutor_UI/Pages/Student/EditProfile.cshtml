@page
@model On_Demand_Tutor_UI.Pages.Student.EditProfileModel

@{
    ViewData["Title"] = "Edit Profile";
}
@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger" role="alert">
        <ul>
            @foreach (var modelStateKey in ViewData.ModelState.Keys)
            {
                foreach (var error in ViewData.ModelState[modelStateKey].Errors)
                {
                    <li>@error.ErrorMessage</li>
                }
            }
        </ul>
    </div>
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0">Edit Your Profile</h2>
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <form method="post">
                        <div class="mb-3">
                            <label asp-for="Student.FullName" class="form-label">Full Name</label>
                            <input asp-for="Student.FullName" class="form-control" />
                            <span asp-validation-for="Student.FullName" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Student.Password" class="form-label">Password</label>
                            <input asp-for="Student.Password" class="form-control" type="password" />
                            <span asp-validation-for="Student.Password" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Student.Phone" class="form-label">Phone</label>
                            <input asp-for="Student.Phone" class="form-control" />
                            <span asp-validation-for="Student.Phone" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Student.Email" class="form-label">Email</label>
                            <input asp-for="Student.Email" class="form-control" type="email" />
                            <span asp-validation-for="Student.Email" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Student.Address" class="form-label">Address</label>
                            <textarea asp-for="Student.Address" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Student.Address" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
    <label asp-for="Student.Grade" class="form-label">Grade</label>
    <select asp-for="Student.Grade" class="form-control">
        @if (Model.HasRestrictedBooking)
        {
            <option value="@Model.Student.Grade">@Model.GradeOptions.FirstOrDefault(g => g.Value == Model.Student.Grade.ToString())?.Text</option>
        }
        else
        {
                                    @foreach (var option in Model.GradeOptions)
                                    {
                                        if (Model.Student.Grade.ToString() == option.Value)
                                        {
                                            <option value="@option.Value" selected>@option.Text</option>
                                        }
                                        else
                                        {
                                            <option value="@option.Value">@option.Text</option>
                                        }
                                    }

        }
    </select>                            
    <span asp-validation-for="Student.Grade" class="text-danger"></span>
</div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">Save Changes</button>
                            <a asp-page="/Index" class="btn btn-secondary">Back to Homepage</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        // Remove alert after 5 seconds
        setTimeout(function () {
            $('.alert').alert('close');
        }, 5000);
    </script>
}
