@page "{id:int}"
@model On_Demand_Tutor_UI.Pages.Tutor.ViewBookingDetailsModel

@{
    Layout = "_Layout_Tutor";
    ViewData["Title"] = "ViewBookingDetails";
}

<h1 style="text-align: center; color: #2c3e50; font-family: Arial, sans-serif; margin-bottom: 20px;">View Booking Details</h1>

<div style="display: flex; justify-content: center; font-family: Arial, sans-serif;">
    <div style="width: 60%; background-color: #f9f9f9; padding: 20px; border-radius: 8px; box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);">
        <table style="width: 100%; border-collapse: collapse;">
            <tbody>
                <tr style="border-bottom: 1px solid #ddd;">
                    <td style="padding: 10px; font-weight: bold; width: 30%;">Student ID</td>
                    <td style="padding: 10px;">@Model.StudentResponse.StudentId</td>
                </tr>
                <tr style="border-bottom: 1px solid #ddd;">
                    <td style="padding: 10px; font-weight: bold;">Fullname</td>
                    <td style="padding: 10px;">@Model.StudentResponse.Fullname</td>
                </tr>
                <tr style="border-bottom: 1px solid #ddd;">
                    <td style="padding: 10px; font-weight: bold;">Phone</td>
                    <td style="padding: 10px;">@Model.StudentResponse.Phone</td>
                </tr>
                <tr style="border-bottom: 1px solid #ddd;">
                    <td style="padding: 10px; font-weight: bold;">Email</td>
                    <td style="padding: 10px;">@Model.StudentResponse.Email</td>
                </tr>
                <tr style="border-bottom: 1px solid #ddd;">
                    <td style="padding: 10px; font-weight: bold;">Address</td>
                    <td style="padding: 10px;">@Model.StudentResponse.Address</td>
                </tr>
                <tr style="border-bottom: 1px solid #ddd;">
                    <td style="padding: 10px; font-weight: bold;">Grade</td>
                    <td style="padding: 10px;">@Model.StudentResponse.Grade</td>
                </tr>
            </tbody>
        </table>

        <div style="text-align: center; margin-top: 20px;">
            <form method="post" style="display: inline;">
                <input type="hidden" asp-for="BookingId" />
                <button type="submit" asp-page-handler="Approve" style="background-color: #28a745; color: white; padding: 10px 20px; border: none; border-radius: 4px; cursor: pointer; margin-right: 10px;">Approve</button>
                <button type="submit" asp-page-handler="Cancel" style="background-color: #dc3545; color: white; padding: 10px 20px; border: none; border-radius: 4px; cursor: pointer;">Cancel</button>
            </form>
        </div>
    </div>
</div>
