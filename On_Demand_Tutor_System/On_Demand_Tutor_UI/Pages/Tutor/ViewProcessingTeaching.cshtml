@page
@model On_Demand_Tutor_UI.Pages.Tutor.ViewProcessingTeachingModel

@{
    ViewData["Title"] = "ViewProcessingTeaching";
}


<h1 style="text-align: center; color: #2c3e50; font-family: Arial, sans-serif; margin-bottom: 20px;">View Student Learning</h1>

<div style="display: flex; justify-content: center;">
    <table style="width: 80%; border-collapse: collapse; font-family: Arial, sans-serif;">
        <thead>
            <tr style="background-color: #34495e; color: white; text-align: left;">
                <th style="padding: 10px; border: 1px solid #ddd;">
                    @Html.DisplayNameFor(model => model.ProcessingTeach[0].DateStart)
                </th>
                <th style="padding: 10px; border: 1px solid #ddd;">
                    @Html.DisplayNameFor(model => model.ProcessingTeach[0].DateEnd)
                </th>
                <th style="padding: 10px; border: 1px solid #ddd;">
                    @Html.DisplayNameFor(model => model.ProcessingTeach[0].ServiceName)
                </th>
                <th style="padding: 10px; border: 1px solid #ddd;">
                    @Html.DisplayNameFor(model => model.ProcessingTeach[0].StudentName)
                </th>
                <th style="padding: 10px; border: 1px solid #ddd;">
                    @Html.DisplayNameFor(model => model.ProcessingTeach[0].StudentAddress)
                </th>
                <th style="padding: 10px; border: 1px solid #ddd;">
                    @Html.DisplayNameFor(model => model.ProcessingTeach[0].Grade)
                </th>
                <th style="padding: 10px; border: 1px solid #ddd;">
                    @Html.DisplayNameFor(model => model.ProcessingTeach[0].Phone)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ProcessingTeach)
            {
                <tr style="border: 1px solid #ddd; background-color: #f9f9f9;">
                    <td style="padding: 10px; border: 1px solid #ddd;">
                        @Html.DisplayFor(modelItem => item.DateStart)
                    </td>
                    <td style="padding: 10px; border: 1px solid #ddd;">
                        @Html.DisplayFor(modelItem => item.DateEnd)
                    </td>
                    <td style="padding: 10px; border: 1px solid #ddd;">
                        @Html.DisplayFor(modelItem => item.ServiceName)
                    </td>
                    <td style="padding: 10px; border: 1px solid #ddd;">
                        @Html.DisplayFor(modelItem => item.StudentName)
                    </td>
                    <td style="padding: 10px; border: 1px solid #ddd;">
                        @Html.DisplayFor(modelItem => item.StudentAddress)
                    </td>
                    <td style="padding: 10px; border: 1px solid #ddd;">
                        @Html.DisplayFor(modelItem => item.Grade)
                    </td>
                    <td style="padding: 10px; border: 1px solid #ddd;">
                        @Html.DisplayFor(modelItem => item.Phone)
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>
