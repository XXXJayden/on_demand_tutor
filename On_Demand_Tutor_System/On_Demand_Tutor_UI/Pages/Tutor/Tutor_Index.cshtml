@page
@model On_Demand_Tutor_UI.Pages.Tutor.Tutor_IndexModel

@{
    ViewData["Title"] = "Tutor Dashboard";
    Layout = "_Layout_Tutor";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0">Tutor Dashboard</h2>
                </div>
                <div class="card-body">
                    @if (Model.TutorStatus == "Incomplete" || Model.TutorStatus == "Pending")
                    {
                        <div class="alert alert-warning mb-4" role="alert">
                            Your profile is @Model.TutorStatus. Please complete your profile and wait for Moderator approval to access all features.
                        </div>
                    }
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <div class="card h-100">
                                <div class="card-body text-center">
                                    <i class="fas fa-user-edit fa-3x mb-3 text-secondary"></i>
                                    <h5 class="card-title">Edit Profile</h5>
                                    <p class="card-text">Update your personal information.</p>
                                    <a class="btn btn-secondary btn-block" href="/Tutor/EditProfile">
                                        Edit Profile
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="card h-100">
                                <div class="card-body text-center">
                                    <i class="fas fa-trophy fa-3x mb-3 text-warning"></i>
                                    <h5 class="card-title">Upload Achievement</h5>
                                    <p class="card-text">Showcase your achievements.</p>
                                    <a class="btn btn-warning btn-block" href="/Tutor/UploadAchievementModel">
                                        Upload Achievement
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="card h-100">
                                <div class="card-body text-center">
                                    <i class="fas fa-plus-circle fa-3x mb-3 text-success"></i>
                                    <h5 class="card-title">Create Service</h5>
                                    <p class="card-text">Offer a new tutoring service.</p>
                                    <a class="btn btn-success btn-block" href="/Tutor/CreateService">
                                        Create Service
                                    </a>
                                </div>
                            </div>
                        </div>
                        @if (Model.TutorStatus == "Active")
                        {
                            <div class="col-md-6 mb-3">
                                <div class="card h-100">
                                    <div class="card-body text-center">
                                        <i class="fas fa-book-reader fa-3x mb-3 text-info"></i>
                                        <h5 class="card-title">View Student Booking</h5>
                                        <p class="card-text">See all student bookings.</p>
                                        <a class="btn btn-info btn-block" href="/Tutor/ViewStudentRegisted">
                                            View Student Booking
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <div class="card h-100">
                                    <div class="card-body text-center">
                                        <i class="fas fa-chalkboard-teacher fa-3x mb-3 text-primary"></i>
                                        <h5 class="card-title">View Student Learning</h5>
                                        <p class="card-text">Monitor ongoing lessons.</p>
                                        <a class="btn btn-primary btn-block" href="/Tutor/ViewProcessingTeaching">
                                            View Student Learning
                                        </a>
                                    </div>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="col-md-6 mb-3">
                                <div class="card h-100">
                                    <div class="card-body text-center">
                                        <i class="fas fa-book-reader fa-3x mb-3 text-muted"></i>
                                        <h5 class="card-title text-muted">View Student Booking</h5>
                                        <p class="card-text">Your profile needs to be approved by Moderator before using this feature.</p>
                                        <button class="btn btn-secondary btn-block" disabled>
                                            View Student Booking
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <div class="card h-100">
                                    <div class="card-body text-center">
                                        <i class="fas fa-chalkboard-teacher fa-3x mb-3 text-muted"></i>
                                        <h5 class="card-title text-muted">View Student Learning</h5>
                                        <p class="card-text">Your profile needs to be approved by Moderator before using this feature.</p>
                                        <button class="btn btn-secondary btn-block" disabled>
                                            View Student Learning
                                        </button>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script src="~/js/signalr/dist/browser/signalr.js"></script>
    <script src="~/js/jsHub.js"></script>
}