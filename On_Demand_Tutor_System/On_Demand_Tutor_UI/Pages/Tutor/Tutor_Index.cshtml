@page
@model On_Demand_Tutor_UI.Pages.Tutor.Tutor_IndexModel
@{
    Layout = "_Layout_Tutor";
    ViewData["Title"] = "Tutor Dashboard";
}

<div class="container mt-4">
    <h1 class="mb-4">Tutor Dashboard</h1>

    @if (Model.TutorStatus == "Incomplete" || Model.TutorStatus == "Pending")
    {
        <div class="alert alert-warning mb-4" role="alert">
            Your profile is @Model.TutorStatus. Please complete your profile and wait for Moderator approval to access all features.
        </div>
    }

    <div class="list-group">
        <a href="/Tutor/EditProfile" class="list-group-item list-group-item-action">Edit Profile</a>
        <a href="/Tutor/UploadAchievementModel" class="list-group-item list-group-item-action">Upload Achievement</a>
        <a href="/Tutor/CreateService" class="list-group-item list-group-item-action">Create Service</a>

        @if (Model.TutorStatus == "Active")
        {
            <a href="/Tutor/ViewStudentRegisted" class="list-group-item list-group-item-action">View Student Booking</a>
            <a href="/Tutor/ViewProcessingTeaching" class="list-group-item list-group-item-action">View Student Learning</a>

        }
        else
        {
            <span class="list-group-item list-group-item-action disabled text-muted">
                View Student Booking
                <small class="d-block">Your profile needs to be approved by Mod before using this feature</small>
            </span>
            <span class="list-group-item list-group-item-action disabled text-muted">
                View Student Learning
                <small class="d-block">Your profile needs to be approved by Mod before using this feature</small>
            </span>
            
        }
    </div>
</div>
