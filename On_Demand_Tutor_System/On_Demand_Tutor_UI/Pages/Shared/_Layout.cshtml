<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>@ViewData["Title"] - eLearning</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Heebo:wght@400;500;600&family=Nunito:wght@600;700;800&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="~/lib/animate/animate.min.css" rel="stylesheet">
    <link href="~/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">

    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="~/css/style.css" rel="stylesheet">

    <!-- Custom Stylesheet -->
    <link href="~/css/custom.css" rel="stylesheet">

    <style>
        .btn-logout {
            background-color: #dc3545;
            border-color: #dc3545;
            color: white;
        }

            .btn-logout:hover {
                background-color: #c82333;
                border-color: #bd2130;
            }
    </style>
</head>
@{
    bool isLoggedIn = Context.Session.GetString("UserEmail") != null;
    string userType = Context.Session.GetString("UserType");
}
<body>
    <nav class="navbar navbar-expand-lg bg-white navbar-light shadow sticky-top p-0">
        <a href="/Index" class="navbar-brand d-flex align-items-center px-4 px-lg-5">
            <h2 class="m-0 text-primary"><i class="fa fa-book me-3"></i>eLEARNING</h2>
        </a>
        <button type="button" class="navbar-toggler me-4" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">
            <div class="navbar-nav ms-auto p-4 p-lg-0">
                <a href="/Student/LookingTutor" class="nav-item nav-link">Book now</a>
                <a href="https://www.facebook.com/nguyenvitien161" class="nav-item nav-link">Contact</a>
       
                @if (!isLoggedIn)
                {
                    <a href="/AccountPages/LoginPage" class="btn btn-primary py-4 px-lg-5 d-none d-lg-block">Join Now<i class="fa fa-arrow-right ms-3"></i></a>
                }
                else if (isLoggedIn && userType == "Student")
                {
                    <a href="/Student/EditProfile" class="nav-item nav-link">Manage Your Profile</a>
                    <a href="/Student/ViewProcessingLearning" class="nav-item nav-link">Your Learning</a>
                    <a href="/Student/ViewHistoryComplete" class="nav-item nav-link">View History Learning</a>
                    <a href="/Index?handler=Logout" class="btn btn-logout py-4 px-lg-5 d-none d-lg-block">Logout<i class="fa fa-sign-out-alt ms-3"></i></a>
                }
            </div>
        </div>
    </nav>

    <div class="d-flex flex-column min-vh-100">
        <main role="main" class="flex-fill">
            <div class="container">
                @RenderBody()
            </div>
        </main>

        <footer class="container-fluid bg-dark text-light footer pt-5 mt-5 wow fadeIn" data-wow-delay="0.1s">
        </footer>
    </div>

    <!-- Back to Top -->
    <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>

    <!-- JavaScript Libraries -->
    @RenderSection("Scripts", required: false)
</body>
</html>