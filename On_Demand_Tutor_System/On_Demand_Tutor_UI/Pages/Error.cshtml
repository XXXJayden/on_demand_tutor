@page
@model ErrorModel
@{
    ViewData["Title"] = "Access Denied";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body text-center">
                    <h1 class="card-title text-danger mb-4">Access Denied</h1>
                    <i class="fas fa-exclamation-triangle fa-4x text-warning mb-4"></i>
                    <h2 class="card-subtitle mb-4">You do not have permission to access this page.</h2>
                    <p class="card-text mb-4">Please contact the admin for more information.</p>
                    <a href="https://www.facebook.com/nguyenvitien161" class="btn btn-primary">Contact Admin</a>
                </div>
            </div>

            @if (Model.ShowRequestId)
            {
                <div class="mt-4 text-center">
                    <small class="text-muted">
@*                         <strong>Request ID:</strong> <code>@Model.RequestId</code>
 *@                    </small>
                </div>
            }
        </div>
    </div>
</div>