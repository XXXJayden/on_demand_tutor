@page
@model On_Demand_Tutor_UI.Pages.Admin.ServicePrice.IndexModel

@{
    Layout = "_Layout_Admin";
    ViewData["Title"] = "Index";
}

<div style="margin: 50px auto; max-width: 800px;">
    <h1 class="text-center">Service Price Index</h1>

    <p class="text-right mb-4">
        <a asp-page="Create" class="btn btn-primary">Create New</a>
    </p>

    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Service[0].Service1)
                </th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Service)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Service1)
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
