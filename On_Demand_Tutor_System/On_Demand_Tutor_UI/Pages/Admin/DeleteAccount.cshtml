@page
@model On_Demand_Tutor_UI.Pages.Admin.DeleteAccountModel

@{
    Layout = "_Layout_Admin";
    ViewData["Title"] = "Change Account Status";
}

<div style="margin: 50px auto; max-width: 600px;">
    <h1 style="text-align: center; color: #007bff;">Change Account Status</h1>

    <h3 style="text-align: center;">Are you sure you want to change the status of this account?</h3>
    <div style="margin-top: 20px;">
        <dl class="row">
            <dt class="col-sm-2" style="font-weight: bold;">
                @Html.DisplayNameFor(model => model.AccountToDelete.FullName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.AccountToDelete.FullName)
            </dd>
            <dt class="col-sm-2" style="font-weight: bold;">
                @Html.DisplayNameFor(model => model.AccountToDelete.Email)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.AccountToDelete.Email)
            </dd>
            <dt class="col-sm-2" style="font-weight: bold;">
                @Html.DisplayNameFor(model => model.AccountToDelete.Status)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.AccountToDelete.Status)
            </dd>
        </dl>

        <form method="post" style="margin-top: 20px;">
            <input type="hidden" asp-for="AccountToDelete.Id" />
            <button type="submit" class="btn btn-danger" style="padding: 10px 20px; border-radius: 5px;">Change Status</button> |
            <a asp-page="/Admin/GetAccount" class="btn btn-secondary" style="padding: 10px 20px; border-radius: 5px;">Back to List</a>
        </form>
    </div>
</div>
