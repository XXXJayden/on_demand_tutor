@page
@model On_Demand_Tutor_UI.Pages.Admin.Admin_IndexModel

@{
    Layout = "_Layout_Admin";
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0">Admin Dashboard</h2>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <div class="card h-100 bg-primary text-white">
                                <div class="card-body text-center">
                                    <i class="fas fa-chart-line fa-3x mb-3"></i>
                                    <h5 class="card-title">Dashboard Statistics</h5>
                                    <p class="card-text">View overall statistics</p>
                                    <a class="btn btn-light btn-block" href="/Admin/Dashboard">
                                        Go to Statistics
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="card h-100 bg-info text-white">
                                <div class="card-body text-center">
                                    <i class="fas fa-users fa-3x mb-3"></i>
                                    <h5 class="card-title">All Accounts</h5>
                                    <p class="card-text">Manage all user accounts</p>
                                    <a class="btn btn-light btn-block" href="/Admin/GetAccount">
                                        View Accounts
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="card h-100 bg-success text-white">
                                <div class="card-body text-center">
                                    <i class="fas fa-user-plus fa-3x mb-3"></i>
                                    <h5 class="card-title">Create Account</h5>
                                    <p class="card-text">Add a new user account</p>
                                    <a class="btn btn-light btn-block" href="/Admin/Create_AccMod">
                                        Create New
                                    </a>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-4 mb-3">
                            <div class="card h-100 bg-primary text-white">
                                <div class="card-body text-center">
                                    <i class="fas fa-chart-line fa-3x mb-3"></i>
                                    <h5 class="card-title">Service</h5>
                                    <p class="card-text">View service</p>
                                    <a class="btn btn-light btn-block" href="/Admin/ServicePrice/Index">
                                        View Service
                                    </a>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
